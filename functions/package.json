{
  "name": "functions",
  "version": "1.0.0",
  "main": "dist/index.js",
  "engines": {
    "node": "14"
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.json",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
